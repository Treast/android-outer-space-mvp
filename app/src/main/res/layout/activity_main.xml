<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/pointsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Points : 0"
        android:textAlignment="center" />

    <Button
        android:id="@+id/overviewButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Vue générale"
        android:textSize="18sp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/buildingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Bâtiments"
        android:textSize="18sp" />

    <Button
        android:id="@+id/fleetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Flotte"
        android:textSize="18sp" />

    <Button
        android:id="@+id/researchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Recherches"
        android:textSize="18sp" />

    <Button
        android:id="@+id/shipyardButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Chantier spatial"
        android:textSize="18sp" />

    <Button
        android:id="@+id/galaxyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Galaxie"
        android:textSize="18sp" />
</LinearLayout>